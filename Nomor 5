#include <iostream>
using namespace std;

int main()
{
    int input,perfect,hasil=0;
cout<<"input the number : ";
cin>>input;
for(int i=1;i<input;i++){
	perfect=input% i;
	if(perfect==0){
	    hasil+=i;
	}
}
if(hasil==input){
	cout<<hasil<<" merupakan perfect number";
}
else{
	    cout<<"bukan merupakan perfect number";
	}
}
